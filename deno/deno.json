{
	"tasks": {
		"exec": "deno run --allow-all",
		"watch": "deno run --watch --allow-all"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"nerdamer": "npm:nerdamer@^1.1.13",
		"nerdamer-prime": "npm:nerdamer-prime@^1.2.2",
		"std/": "https://deno.land/std@0.224.0/"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 140,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["*/**/*.ts"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	}
}
