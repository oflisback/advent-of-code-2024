{
  "tasks": {
    "day-1-dev": "deno run --watch 1/1.ts",
    "day-1": "deno run --allow-all 1/1.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "std/": "https://deno.land/std@0.224.0/"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*/**/*.ts"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  }
}
