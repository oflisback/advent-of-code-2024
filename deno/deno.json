{
  "tasks": {
    "exec": "deno run --allow-all"
    "watch": "deno run --watch --allow-all",
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "std/": "https://deno.land/std@0.224.0/"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*/**/*.ts"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  }
}
